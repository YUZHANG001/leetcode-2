{
  "scripts": {
    "format:all": "eslint --fix . && prettier --write '{,!(node_modules|dist|build|coverage)/**/}*.*' '!*.{log,lock,map}' '!**/.*' '!package-lock.json'",
    "format:staged": "pretty-quick --staged && lint-staged",
    "build": "tsc -p tsconfig-build.json",
    "test": "jest --watch"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:staged",
      "pre-push": "npm run format:staged"
    }
  },
  "devDependencies": {
    "@types/eslint": "^6.1.8",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/prettier": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "glob": "^7.1.6"
  }
}
